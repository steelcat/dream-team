mixin block-place
	.block-place
		h2.block-place__title Положение
		.block-place__control
			div(class="block-place__control__buttonset cf")
				.block-place__control__buttonset-item
				.block-place__control__buttonset-item
				.block-place__control__buttonset-item
				.block-place__control__buttonset-item
				.block-place__control__buttonset-item
				.block-place__control__buttonset-item
				.block-place__control__buttonset-item
				.block-place__control__buttonset-item
				.block-place__control__buttonset-item
			.block-place__control__spinners
				form(class="block-place__control__spinners-item")
